<Page
    x:Class="ParkingFront.Views.Login.LoginPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Padding="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="20">
            <TextBlock Text="Inicio de Sesión" FontSize="24" FontWeight="Bold" />
            <TextBox
                x:Name="IdentificationTextBox"
                Header="Identificación"
                PlaceholderText="Ingresa tu identificación"
                Width="300" />
            <PasswordBox
                x:Name="PasswordBox"
                Header="Contraseña"
                PlaceholderText="Ingresa tu contraseña"
                Width="300" />
            <Button Content="Iniciar Sesión" Click="OnLoginClick" Width="300" />
            <Button Content="Registrarse" Click="OnRegisterClick" Width="300" />
        </StackPanel>
    </Grid>

</Page>